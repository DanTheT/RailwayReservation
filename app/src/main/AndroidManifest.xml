<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.railwayreservation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RailwayReservation">
        <activity
            android:name=".passenger.PassengerDatePicker"
            android:exported="false" />
        <activity
            android:name=".passenger.PurchaseHistory"
            android:exported="false" />

        <service
            android:name=".admin.announcement.ServiceFirebase"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <activity
            android:name=".admin.announcement.SendAnnouncementActivity"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerChgPw"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerTicket"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerSignup"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerScreen"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerReservation"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerPayment"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerMembership"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerLogin"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerHome"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerCancellation"
            android:exported="false" />
        <activity
            android:name=".passenger.PassengerAccount"
            android:exported="false" />
        <activity
            android:name=".passengerTrain.TrainMainActivity"
            android:exported="true" />
        <activity
            android:name=".reportIssue.ReportIssue"
            android:exported="false" />
        <activity
            android:name=".admin.AdminLogin"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>