<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.trainSchedule.deleteSchedule.DeleteScheduleFragment">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stationStart_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/delete_station_schedule_spinner"
        app:layout_constraintStart_toStartOf="@+id/delete_station_schedule_spinner" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/delete_train_schedule_spinner"
        app:layout_constraintStart_toStartOf="@+id/delete_train_schedule_spinner" />

    <Spinner
        android:id="@+id/delete_station_schedule_spinner"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginTop="168dp"
        android:contentDescription="Select the station want to delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/delete_train_schedule_spinner"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_station_schedule_spinner"
        android:contentDescription="Select the train schedule want to delete"
        />

    <Button
        android:id="@+id/delete_schedule_btn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:text="Delete"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_train_schedule_spinner" />

    <Button
        android:id="@+id/back_to_delete_page"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="28dp"
        android:text="Back to"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_schedule_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>