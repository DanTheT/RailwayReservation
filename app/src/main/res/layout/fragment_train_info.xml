<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".passengerTrain.trainInfo.TrainInfoFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_text"
        app:layout_constraintBottom_toTopOf="@+id/train_type_spinner"
        app:layout_constraintStart_toStartOf="@+id/train_type_spinner"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lane_text"
        app:layout_constraintBottom_toTopOf="@+id/train_line_textview"
        app:layout_constraintStart_toStartOf="@+id/train_line_textview"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/train_end_textview"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_start_textview" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stationStart_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/train_start_textview"
        app:layout_constraintStart_toStartOf="@+id/train_start_textview" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/search_train_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_end_textview" />

    <TextView
        android:id="@+id/train_start_textview"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_num_textview" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stationEnd_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/train_end_textview"
        app:layout_constraintStart_toStartOf="@+id/train_end_textview" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trainInfoFrag_trainNoText"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/train_num_textview"
        app:layout_constraintStart_toStartOf="@+id/train_num_textview" />

    <TextView
        android:id="@+id/train_num_textview"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_line_textview" />

    <Spinner
        android:id="@+id/train_type_spinner"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/trainInfoFrag_trainTypeSpinner"
        />

    <TextView
        android:id="@+id/train_line_textview"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_type_spinner" />

    <Button
        android:id="@+id/selection_btn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/selection_train_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_button" />
</androidx.constraintlayout.widget.ConstraintLayout>